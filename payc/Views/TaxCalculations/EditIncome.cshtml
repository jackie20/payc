@model payc.Models.TaxCalculation

<h2>Edit Tax Calculation</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="PostalCode">Postal Code</label>
        <input class="form-control" asp-for="PostalCode" />
        <span asp-validation-for="PostalCode" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AnnualIncome">Annual Income</label>
        <input class="form-control" asp-for="AnnualIncome" />
        <span asp-validation-for="AnnualIncome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TaxAmount">Tax Amount</label>
        <input class="form-control" asp-for="TaxAmount" />
        <span asp-validation-for="TaxAmount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>
